@model IEnumerable<CadeMeuMedico.Models.Usuarios>

@{ViewBag.Title = "Usuários Do Sistema";}

<h2>
    @ViewBag.Title
    @Html.ActionLink("Adicionar", "Adicionar", new { }, new { @class = "btn btn-primary pull-right" })
</h2>
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Código</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Login)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.IDUsuario)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Login)</td>
                <td><a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a></td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.IDUsuario }, new { @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Deletar", "", new { }, new { @class = "btn btn-danger btn-sm", onclick = "deleteRegister(" + @item.IDUsuario + ", 'Usuario'); return false;" })
                </td>
            </tr>
        }
    </table>
</div>
@section script {
    <script type="text/javascript" src="@Url.Content("~/Scripts/App.js")"></script>
}